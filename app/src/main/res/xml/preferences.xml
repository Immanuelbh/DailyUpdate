<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/notifications"
        >
        <CheckBoxPreference
            android:key="preference_all_notifications"
            android:title="@string/all_notif"
            android:defaultValue="true"
            android:onClick="allNotif"
            />
        <CheckBoxPreference
            android:key="preference_news_notifications"
            android:title="@string/news_notif"
            android:defaultValue="true"
            android:onClick="newsNotif"
            />
        <CheckBoxPreference
            android:key="preference_weather_notifications"
            android:title="@string/weather_notif"
            android:defaultValue="true"
            android:onClick="weatherNotif"
            />


    </PreferenceCategory>
    <PreferenceCategory
        android:title="@string/frequency"
        >
        <ListPreference
            android:key="preferences_notification_interval"
            android:title="@string/interval_notif"
            android:entryValues="@array/interval_list_values"
            android:entries="@array/interval_list_txt"
            android:defaultValue="60"
            />

    </PreferenceCategory>

</PreferenceScreen>